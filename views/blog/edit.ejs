<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="blog[description]" ><%= blog.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blog">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

