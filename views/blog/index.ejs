<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To My Web Development Blog</h1>
             <p>View my posts or add a new one</p>
             <p>
                <a class="btn btn-primary btn-large" href="/blog/new">Add New Post</a>
             <% if(currentUser && (currentUser.username === "admin")){ %>
                      <a class="btn btn-warning btn-large" href="/admin">Admin page</a> 
                  </p> 
                 <% }%>
         </div>
     </header>
     
    
     
     
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% posts.forEach(function(post){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= post.image %>">
                   <div class="caption">
                       <h4><%= post.name %></h4>
                   </div>
                       <div class="caption">
                       <h4 class="text-left"><%= (post.description).substring(0, 75) %>...</h4>
                   </div>
                   <p>
                       <a href="/blog/<%= post._id %>" class="btn btn-primary">Read more</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
